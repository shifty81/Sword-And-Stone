script/source = "extends Node2D

## Main scene script for isometric world

@onready var world_generator = $WorldGenerator
@onready var tile_map = $TileMap
@onready var building_system = $BuildingSystem
@onready var player = $Player

func _ready():
	print(\"=== Sword and Stone - Isometric 2.5D ===\" )
	
	# Connect world generator to tilemap
	if world_generator and tile_map:
		world_generator.set_tile_map(tile_map)
		print(\"✓ World generator initialized\")
	
	# Connect building system
	if building_system and tile_map:
		building_system.tile_map = tile_map
		print(\"✓ Building system initialized\")
	
	print()
	print(\"Controls:\")
	print(\"  WASD - Move (isometric directions)\")
	print(\"  Shift - Sprint\")
	print(\"  B - Toggle building mode\")
	print(\"  Left Click - Place building (in build mode)\")
	print(\"  Right Click - Remove building (in build mode)\")
	print(\"  ESC - Exit building mode\")
	print()
	print(\"Explore the procedurally generated world!\")
"

